<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<AnchorPane minWidth="400.0" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreenController" maxWidth="Infinity">
   <children>
      <VBox prefHeight="600.0" prefWidth="400.0" fillWidth="true" maxWidth="Infinity" alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="400.0" spacing="20.0">
               <children>
                  <Label text="Please enter location:" />
                  <TextField fx:id="inputLocationField" />
                  <Button fx:id="submit" defaultButton="true" mnemonicParsing="false" onAction="#submitHandler" text="Submit" />
               </children>
            </HBox>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="116.0" prefWidth="400.0" text="Valid inputs:&#10;City Name (Can optionally include US State or a Country)&#10;City ID &#10;Geographic Coordinates (Latitude, Longitude)&#10;Postal Code (integer only), Country Code (e.g. 75000, FR)" />
            <Pagination fx:id="pagination" prefHeight="200.0" minWidth="360.0" visible="false" maxWidth="360" minHeight="400">
                <fx:define>
                    <VBox fx:id="vbox" maxHeight="240.0" prefWidth="300.0" VBox.vgrow="ALWAYS" alignment="center">
                        <children>
                            <Label fx:id="nameLabel"/>
                            <Label fx:id="mainTempLabel"/>
                            <Label fx:id="mainLabel"/>
                            <Button fx:id="detailedButton" text="Detailed" onAction="#detailedHandler"/>
                        </children>
                        <opaqueInsets>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </opaqueInsets>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </VBox>
                    <ImageView fx:id="imageView" fitHeight="240" pickOnBounds="true" preserveRatio="true" visible="false" />
                </fx:define>
            </Pagination>

         </children>
      </VBox>
   </children>
</AnchorPane>
